<div class="show">
  <p class="username"><%= @comment.user.email %> <%= time_ago_in_words(@comment.created_at) %> ago</p>
  <p><%= @comment.body %></p>
  <%= form_for [@comment, @new_comment] do |f| %>
    <% if @new_comment.errors.any? %>
      <% @new_comment.errors.full_messages.each do |msg| %>
        <div class="alert"><%= msg %></div>
      <% end %>
    <% end %>
    <p>
      <%= f.text_field :body %>
    </p>
    <%= f.hidden_field :commentable_type, :value => 'Comment' %>
    <%= f.hidden_field :commentable_id, :value => @comment.id %>
    <p>
      <%= f.submit %>
    </p><br>
  <% end %>
</div>
